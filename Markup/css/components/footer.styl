footer {
	background: gray_color;
	padding: 20px 0;
	.logo {
		margin: 0 auto;
	}
	.copyright {
		margin-bottom: 40px;
		p {
			margin-bottom: 20px;
		}
	}
}

.footer {
	&-item {
		margin-bottom: 20px;
		p {
			font-size: 1.1rem;
		}
		nav {
			li {
				a {
					color: #363636;
					font-size: 1.1rem;
					display: block;
					margin-bottom: 10px;
				}
			}
		}
		address {
			span {
				display: block;
				&:nth-child(3) {
					margin-bottom: 10px;
				}
			}
		}
		.contact {
			display: flex;
			justify-content: space-between;
			flex-wrap: wrap;
			&-item {
				width: 33.333%;
				&:nth-child(3n+2) {
					text-align: center;
				}
				&:nth-child(3n+3) {
					text-align: right;
				}
				a {
				    font-size: 0;
				    width: 45px;
				    height: 45px;
				    margin-bottom: 20px;
				    border: 4px solid #f4f3f3;
				    box-shadow: 1px 1px 3px black;
				    display: inline-block;
				    background-position: center;
				    background-size: cover;
				    border-radius: 50%;
					&.facebook {
						background-image: url('../../img/facebook-icon.jpg');
					}
					&.skype {
						background-image: url('../../img/skype.png');
					}
					&.pinterest {
						background-image: url('../../img/pinterest.png');
					}
					&.linkedin {
						background-image: url('../../img/linkedin.png');
					}
					&.share {
						background-image: url('../../img/share-icon.jpg');
					}
					&.ball {
						background-image: url('../../img/ball-icon.jpg');
					}
				}
			}
		}
	}
	&-title {
		margin-bottom: 15px;
		text-transform: uppercase;
		font-size: 1.3rem;
	}
}

@media screen and (min-width: sm) {
	footer {	
		.footer {
			&-item {
				&:first-child {
					width: 31%;
				}
				&:nth-child(2),
				&:nth-child(3) {
					width: 11%;
				}
				&:nth-child(4) {
					width: 17%;
				}
				&:nth-child(5) {
					width: 24%;
				}
			}
		}
		.copyright {
		    display: flex;
		    justify-content: space-between;
		    align-items: flex-end;
		    p {
		    	margin-bottom: 0;
		    }
		}		
	}
}