.works {
	padding: 0;
	margin-bottom: 30px;
	border-bottom: 1px solid #ccc;
	&-header {
		border-bottom: 1px solid #ccc;
		flex_default();
		padding: 15px 0;
		margin-bottom: 20px;
		h2 {
			display: inline-block;
		}
	}
	&-group {
		margin-bottom: 20px;
	}
	&-title {
		.fa {
			color: color_theme;
    		font-size: 1.2rem;
    		margin-right: 10px;
		}
	}
	.owl-nav {
	    position: absolute;
	    top: -58px;
	    display: block;
	    right: 0;
		div {
			width: 20px;
			height: 20px;
			line-height: 20px;
			text-align: center;
			margin-left: 10px;
			background: color_theme;
			border-radius: 50%;
			display: inline-block;
			color: #000;
			&:first-child {
				.fa {
					position: relative;
					top: 1px;
					left: -1px;
			  	}
			}
			&:nth-child(2) {
				.fa {
					position: relative;
					top: 1px;
					left: 1px;
				}
			}
		}
		&.disabled {
			display: block !important;
		}
	}
	&-item {
		position: relative;
		overflow: hidden;
		margin-bottom: 40px;
		&:hover {
			.works-details {
				bottom: 0;
			}
		}
	}
	&-details {
		transition: all 0.4s ease;
	    background: color_theme;
	    text-align: center;
	    bottom: -80px;
	    position: absolute;
	    width: 100%;
	    height: 80px;
	    line-height: 80px;
	    a {
			    color: #fff;
			    font-size: 30px;
			    padding: 0 10px;
	    }
	}
}

.testimonial {
	margin-bottom: 40px;
	&-description {
		p {
			font-size: 1.04rem;
			line-height: 24px;
			margin-bottom: 20px;
		}
		span {
			font-style: italic;
			font-weight: bold;
		}
	}
}

.clients {
	&-item {
		border: 1px solid #e4e4e4;
		img {
			padding: 40px;
			width: 100%;
			height: 150px;
		    background: #fff;
		    box-shadow: inset 11px 11px 35px #f2f3f7, inset -11px -11px 35px #f2f3f7;
		}
	}
}

@media screen and (min-width: sm) and (max-width: md) {
	.clients {
		.sm-2 {
			width: 50%;
		}
	}
}

@media screen and (min-width: md) {
	.clients {
		.md-3 {
			width: 33.333%;
		}
	}
	.works {
		.owl-item {
			height: 170px;
			.works-item {
				width: 100%;
			}
		}
	}
}

@media screen and (min-width: sm) {
	.clients {
		&-item {
			img {
				height: 120px;
			}
		}
	}
}
