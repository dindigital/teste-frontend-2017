.contact {
	padding: 30px 0;
	.title-w-icon {
		border-bottom: 1px solid #dddddd;
    	padding-bottom: 10px;
    	margin-bottom: 30px;
	}
	form {
		margin: 20px 0;
		.button {
			text-align: left;
		}
	}

	.map-holder {
		padding: 20px;
		background: #e8fcfe;
		margin-bottom: 20px;
		border: 1px solid #81e4ed;
		h3 {
			margin-bottom: 10px;
		}
		iframe {
			width: 100%;
		}
	}
}

@media screen and (min-width: sm) { 
	.form-holder {
		width: 55%;
		form {
			width: 80%;
		}
	}
	.map {
		width: 40%;
		iframe {
			height: 270px;
		}
	}
}